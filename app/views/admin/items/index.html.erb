
<body>

    <header>
      <nav>
        <ul>
          <li class=”current”>
            <%= link_to admin_items_path do %>
              商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_customers_path do %>
              会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_path do %>
              注文履歴一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_genres_path do %>
              ジャンル一覧
            <% end %>
          </li>
          <% if admin_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
            <% else %>
            <li>
              <%= link_to "ログイン", new_admin_session_path %>
            </li>
            <% end %>
        </ul>
      </nav>

      <form class="search-container">
        <input type="text" id="search-bar" placeholder="Search">
          <a href="#"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></a>
      </form>

    </header>

    <main>
    <div class="container">
      <div  class="row">
        <div class="col-lg-10">
          <h4>商品一覧</h4>
        </div>
        <div class="col-lg-2">
          <%= link_to new_admin_item_path do %>
            <i class="fa-solid fa-pen-to-square fa-2x"></i>
          <% end %>

        </div>

      </div>

      <div class="row">
        <table class="table table-hover table-inverse", style="width:1000px;">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th></th>
              <th></th>
              <th></th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |items| %>
            <tr>
              <td><%= items.id %></td>
              <td>
              <%= link_to admin_item_path(items.id) do %>
                <%= items.name %>
              <% end %>
              </td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= items.price %></td>
              <td><%= items.genre.name %></td>
              <td>
                <% if items.is_active == true %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
          <% end %>


          </tbody>
         </table>
         <%= paginate @items %>
      </div>
    </div>
    </main>

    <footer>

    </footer>

  </body>
