
<header>
      <nav>
        <ul>
          <li class=”current”>
            <%= link_to admin_items_path do %>
              商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_customers_path do %>
              会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_path do %>
              注文履歴一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_genres_path do %>
              ジャンル一覧
            <% end %>
          </li>
          <% if admin_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
            <% else %>
            <li>
              <%= link_to "ログイン", new_admin_session_path %>
            </li>
            <% end %>
        </ul>
      </nav>

      <form class="search-container">
        <input type="text" id="search-bar" placeholder="Search">
          <a href="#"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></a>
      </form>

    </header>

    <main>
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>

      <table style="writing-mode:vertical-lr;width:600px;height:300px;margin:20px 0 20px 0">
          <thead style="width:200px;background-color:white;">
            <tr>
              <th style="writing-mode:horizontal-tb;">会員ID</th>
              <th style="writing-mode:horizontal-tb;">氏名</th>
              <th style="writing-mode:horizontal-tb;">フリガナ</th>
              <th style="writing-mode:horizontal-tb;">郵便番号</th>
              <th style="writing-mode:horizontal-tb;">住所</th>
              <th style="writing-mode:horizontal-tb;">電話番号</th>
              <th style="writing-mode:horizontal-tb;">メールアドレス</th>
              <th style="writing-mode:horizontal-tb;">会員ステータス</th>
              <th style="writing-mode:horizontal-tb;"><%= link_to "編集する" , edit_admin_customer_path(@customer.id) ,class:'btn btn-outline-success', style:'width:200px;' %></th>
            </tr>
          </thead>

          <tbody style="width:300px;">
            <tr>
              <td style="writing-mode:horizontal-tb;"><%= @customer.id %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.last_name %><%= @customer.first_name %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.postal_code %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.address %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.telephone_number %></td>
              <td style="writing-mode:horizontal-tb;"><%= @customer.email %></td>
              <td style="writing-mode:horizontal-tb;">
                <% if @customer.is_deleted == true %>
                  <p>有効</p>
                <% else %>
                  <p>退会</p>
                <% end %>
              </td>
              <td style="writing-mode:horizontal-tb;"><%= link_to "注文履歴一覧を見る" , admin_path ,class:'btn btn-outline-primary', style:'width:200px;' %></td>
            </tr>
          </tbody>
        </table>

    </main>

    <footer>

    </footer>