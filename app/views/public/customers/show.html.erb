
<header>
      <nav>
        <ul>
          <li class=”current”>
            <%= link_to customers_mypage_path do %>
              マイページ
            <% end %>
          </li>
          <li>
            <%= link_to items_path do %>
              商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to cart_items_path do %>
              カート
            <% end %>
          </li>
          <% if customer_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
            <% else %>
            <li>
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
            <% end %>
        </ul>
      </nav>

      <form class="search-container">
        <input type="text" id="search-bar" placeholder="Search">
          <a href="#"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></a>
      </form>

    </header>

    <main>
      <h4>マイページ</h4>
      
      <h5>登録情報</h5>
      
      <table style="writing-mode:vertical-lr;">
        <thead style="width:200px;">
          <tr>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">氏名</th>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">カナ</th>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">郵便番号</th>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">住所</th>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">電話番号</th>
            <th style="writing-mode:horizontal-tb;font-weight:300;border:1px solid gray;">メールアドレス</th>
          </tr>
        </thead>

        <tbody style="width:400px;">
          <tr>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.last_name %><%= @customer.first_name %></td>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.postal_code %></td>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.address %></td>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.telephone_number %></td>
            <td style="writing-mode:horizontal-tb;border:1px solid gray;"><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      
      <div style="margin-left:450px;margin-top:10px;">
        <%= link_to "編集する" , customers_information_edit_path(@customer.id) ,class:'btn btn-outline-primary' %>
      </div>

       <h5>配送先</h5>
       <%= link_to "一覧を見る" , addresses_path, class:'btn btn-outline-warning' %>
       <h5>注文履歴</h5>
       <%= link_to "一覧を見る" , orders_path, class:'btn btn-outline-warning' %>

    </main>

    <footer>

    </footer>